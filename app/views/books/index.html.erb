<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8">
    <title>bookers</title>
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <link rel="stylesheet" href="../index.css">
  </head>

<body>
  
  <h1>Books</h1>
 
 <table>
  <thread>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thread>
  <tbody>
    
   
   <% @books.each do |book| %>
  
  <tr>
   <td><%= book.title %></td>
   
   <td><%= book.body %></td>
  
   <td>
    <%= link_to "Show",book_path(book.id), method: :show %>
   </td>
   <td>
    <%= link_to "Edit",edit_book_path(book.id), method: :edit %>
   </td>
   <td>
    <%= link_to "Destroy",book_path(book.id), method: :delete %>
   </td>
  
  <% end %>
  </tr> 
   </tbody>
  </table>
  
 <h2>New book</h2>
 <div class="error-box">
  
 <% if @book.errors.any? %>
 
  <div class="error-box-top">
   
  <%= @book.errors.count %> errors prohibited this book from being saved:
  
  </div>
  
  <div class="error-box-bottom">
  
  <% @book.errors.full_messages.each do |message| %>
    <li><%= message %>
    
  <% end %>
 <% end %>
  
  </div>
  
 </div>
<!-- form_with部分 -->
 <%= form_with model:@book,local:true do |f| %>
  <div class="field">
  <label for="book_title">Title</label>
  <%= f.text_field :title %>
  </div>
  <div class="field">
  <label for="book_body">Body</label>
  <%= f.text_area :body %></br>
  </div>
  <div class="action">
  <%= f.submit  'Create Book' %>
 <% end %>
  </div>
  </form>
  </body>
 </html>