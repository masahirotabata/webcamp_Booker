<main-edit>
 <h1>Editing Book</h1>

<div class="error-box">
  
 <% if @book.errors.any? %>
 
  <div class="error-box-top">
   
  <%= @book.errors.count %> errors prohibited this book from being saved:
  
  </div>
  
  <div class="error-box-bottom">
  
  <% @book.errors.full_messages.each do |message| %>
    <li><%= message %>
    
  <% end %>
 <% end %>
  
  </div>
  
 </div>
    
  <%= form_with model:@book, local:true do |f| %>
  <div class="field">
    
    
    
   <lavel>
   <h4>Title</h4>
   <%= f.text_field :title %>
   </lavel>
   
  </div>
  
  <div class="field">
  <lavel>
  <h4>Body</h4>
  </lavel>
  <%= f.text_area :body %>
  </div>
  <div class="aciton">
  <%= f.submit 'Update Book' %>
  <% end %>
  </div>
<%=link_to("show","/books/#{@book.id}")%> |<%=link_to("Back","/books") %>
</main-edit>